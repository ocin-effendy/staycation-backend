<div class="tab-pane fade show active" id="showItem" role="tabpanel" aria-labelledby="home-tab" tabindex="0">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-4">
       
       <div class="card-body">
           <div class="table-responsive">
               <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                   <thead>
                       <tr>
                           <th>No</th>
                           <th>Title</th>
                           <th>Price</th>
                           <th>country</th>
                           <th>city</th>
                           <th>action</th>
                       </tr>
                   </thead>
                   <tbody>
                    <% for(let i = 0; i < item.length; i++) { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= item[i].title %></td>
                        <td><%= item[i].price %></td>
                        <td><%= item[i].country %></td>
                        <td><%= item[i].city %></td>
                        <td>
                            <form action="/admin/item/<%= item[i].id %>/delete?_method=DELETE" method="post">
                                <a href="/admin/item/show-image/<%= item[i].id %>" type="button" class="brn btn-info btn-circle btn-sm " ><i class="fas fa-image"></i></a>
                                <a href="/admin/item/<%= item[i].id %>" class="brn btn-warning btn-circle btn-sm " ><i class="fas fa-edit"></i></a>
                                <button type="submit" class="brn btn-danger btn-circle btn-sm"><i class="fas fa-trash"></i></button>
                                <a href="/admin/item/show-detail-item/<%= item[i].id %>" type="button" class="brn btn-success btn-circle btn-sm " ><i class="fas fa-plus"></i></a>

                            </form>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
               </table>
           </div>
       </div>
   </div>
</div>
