    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-4">
        <div class="card-header py-3">
            <!-- Button trigger modal -->
            <a href="/admin/booking" class="btn btn-primary">back</a>
    
        </div>
       <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="http://localhost:3000/<%= booking.payments.proofPayment %>" class="img-fluid" alt="imageItem">
                <div class="row">
                    <% if (booking.payments.status === 'Process') { %>
                    <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="post">
                        <button type="submit" class="brn btn-success btn-sm">
                            <i class="fas fa-check"></i>
                            Confirmation
                        </button>
                    </form>
                    <form action="/admin/booking/<%= booking.id %>/reject?_method=PUT" method="post" class="ml-2">
                        <button type="submit" class="brn btn-danger btn-sm">
                            <i class="fas fa-times"></i>
                            Reject
                        </button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableDetailBooking" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name Member</th>
                                <th>Total</th>
                                <th>Bank From</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                <td><%= booking.total %></td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>
                        </tbody>
                       
                    </table>
                </div>
            </div>
        </div>
       </div>
   </div>


    
